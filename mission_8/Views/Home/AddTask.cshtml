@{
    ViewData["Title"] = "Add a Task";
}

@model TaskResponse

<h2>Add a Task</h2>
<br />

<form method="post">

    <div asp-validation-summary="All"></div>

    <label asp-for="Task">Task</label>
    <textarea asp-for="Task">Task</textarea><br />

    <label asp-for="DueDate">Due Date</label>
    <input asp-for="DueDate" />

    <label asp-for="Quadrant">Quadrant</label>
    <select asp-for="Quadrant">
        <option value="Q1">Quadrant 1</option>
        <option value="Q2">Quadrant 2</option>
        <option value="Q3">Quadrant 3</option>
        <option value="Q4">Quadrant 4</option>
    </select><br />

    <label asp-for="CategoryId">Category: </label>
    <select asp-for="CategoryId">
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>

        }
    </select>
    <br />

    <label asp-for="Completed">Completed?</label>
    <input type="checkbox" asp-for="Completed" value="true"><br />
    @*<select asp-for="Completed">
            <option value="true">True</option>
            <option value="false">False</option>
        </select><br />*@

    <button type="submit">Create Task</button>
</form>